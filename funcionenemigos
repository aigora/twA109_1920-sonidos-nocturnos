#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>

#define SIZE_X 55
#define SIZE_Y 55



int main(void) 
{
    char enemigo = 'M';
    char enemigo_escudo = 'X';
    int total_enemigos = 0;
    char mundo[SIZE_X][SIZE_Y];
    int x, y;
    
    for (x = 0; x < SIZE_X; x ++)
    {
        for (y = 0; y < SIZE_Y; y ++) 
            {
               if ((y+1) % 2 == 0 && y < 7 && x > 4 && x < SIZE_X - 5 && x % 2 ==0)
                         {
                           mundo[y][x] = enemigo;
                           total_enemigos ++;
                         }
                         
            else
                if ((y+1) % 2 == 0 && y >= 7 && y < 9 && x > 4 && x < SIZE_X - 5 && x % 2 ==0)
                   {
                mundo[y][x] = enemigo_escudo;
                total_enemigos = total_enemigos + 2;
                    }
                else
                    {
                     mundo[y][x] = ' ';
                    }
            }
    }
  
        system("cls");

            printf("\n");

            for (y = 0; y < SIZE_Y; y ++) 
            {
                for (x = 0; x < SIZE_X; x ++)
                    printf("%c", mundo[y][x]);
                
                printf("\n");
            }
                   
	return 0;
}
